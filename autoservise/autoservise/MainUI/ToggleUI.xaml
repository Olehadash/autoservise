<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="autoservise.MainUI.ToggleUI">
  <ContentView.Content>
      <StackLayout>
            <StackLayout Orientation="Horizontal"
                             WidthRequest="300"
                             Margin="10"
                             x:Name="MainLayout">
                <Image Source="toggle.png"
                           x:Name="ToggleImage"/>
                <Label x:Name="Title" 
                    Text="Договорная цена"
                           FontSize="14"
                           VerticalOptions="Center"/>
            </StackLayout>
        </StackLayout>
  </ContentView.Content>
</ContentView>