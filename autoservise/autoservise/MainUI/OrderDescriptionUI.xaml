<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="autoservise.MainUI.OrderDescriptionUI">
  <ContentView.Content>
      <StackLayout>
            <Frame x:Name="MainFrame"
                   BackgroundColor="#EEF6FE"
                   HasShadow="false"
                   CornerRadius="15">
                <Grid>
                    <Label x:Name="Title"
                           Grid.Column="0"
                           Grid.Row="0"
                           Text="Title"
                           FontSize="Small" FontAttributes="Bold"/>
                    <Label x:Name="RecalsNum"
                           TextColor="Gray"
                           Grid.Row="0"
                           Grid.Column="1"
                           Text="recals"
                           FontSize="Small"
                           HorizontalTextAlignment="End"/>
                    <Label Grid.Row="1"
                           Text="Description"
                           FontSize="Small"/>
                </Grid>



            </Frame>
        </StackLayout>
  </ContentView.Content>
</ContentView>