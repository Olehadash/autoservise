<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="autoservise.MainUI.ChatMessage">
  <ContentView.Content>
        <Grid>
            <StackLayout 
                    x:Name="Text_Message_Layot"
                    BackgroundColor="#EEF6FE"
                    Margin="10"
                    Padding="10"
                    HorizontalOptions="End">
                <ImageButton x:Name="ImageLoadButton"
                    IsVisible="false"
                    Source="piico.png"
                    WidthRequest="100"
                    HeightRequest="100"/>
                <ImageButton x:Name="FileLoadButton"
                    IsVisible="false"
                    Source="sertif.png"
                    WidthRequest="30"
                    Margin="10,0,10,0"/>
                <Label Text="TextMessage"/>
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>