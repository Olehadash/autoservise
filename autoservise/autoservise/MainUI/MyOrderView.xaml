<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="autoservise.MainUI.MyOrderView">
  <ContentView.Content>
        <Grid x:Name="MainGrid"
                                  BackgroundColor="#EEF6FE"
                                  Margin="10">
            <Grid Grid.Row="0"
                              HorizontalOptions="FillAndExpand">
                <Label x:Name="labelHeader"
                                    
                                       Text="Orer Name"
                                       Margin="10"
                                       FontSize="Small"/>
                <Label x:Name="labelHeader"
                                       Text="15 откликов"
                                       Margin="10"
                                       FontSize="Small"
                                   HorizontalOptions="End"/>
            </Grid>

            <Label x:Name="labelDiscription"
                                       Grid.Row="1" 
                                       Text="Order Discription"
                                       Margin="10,0,10,0"
                                       />
        </Grid>
    </ContentView.Content>
</ContentView>