<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="autoservise.Xaml.Tutorial.Tutorial3">
    <ContentPage.Content>
        <Grid>
            <StackLayout Grid.Row="0"
                         VerticalOptions="Center">
                <Image Margin="20,40,20,20" 
                Source="{OnPlatform iOS='_114360-391.png', Android='_114360-391.png'}" 
                   WidthRequest="300"
                   />
            </StackLayout>
            <StackLayout Grid.Row="1"
                         VerticalOptions="Center">
                <Label Text="Ремонт завершён"
                   Margin="10, 40, 10, 0"
                   TextColor="#66C7F4"
                   HorizontalTextAlignment="Center"
                   FontSize="Large"/>
                <Label Text="Вы узнаете о завершении ремонта в мобильном приложении. Останется только забрать автомобиль." 
                  FontSize="Medium"
                   HorizontalTextAlignment="Center"
                   Margin="10, 0,10,10"/>
            </StackLayout>
            <StackLayout Grid.Row="2"
                         VerticalOptions="End"
                         Margin="20">
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center"
                             Margin="10">
                    <StackLayout.Resources>
                        <Style TargetType="Image">
                            <Setter Property="Source" Value="circl.png"/>
                            <Setter Property="WidthRequest" Value="5"/>
                            <Setter Property="HeightRequest" Value="5"/>
                            <Setter Property="VerticalOptions" Value="Center"/>
                        </Style>

                    </StackLayout.Resources>
                    <Image />
                    <Image />
                    <Image />
                    <Image Source="circl2.png" WidthRequest="10" HeightRequest="10" />
                </StackLayout>

                <Button 
                Text="Начать"
                BorderWidth="1"
                BorderColor="#66C7F4"
                TextColor="#ffffff"
                BackgroundColor="#66C7F4"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center"
                WidthRequest="300"
                Clicked="Button_Clicked"
                    />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>